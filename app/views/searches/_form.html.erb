<style>
 select {
  height: 30px;
 }

 /* タブレット横置きサイズ（1024px）以下の際に適用される設定 */
 @media screen and (max-width:1024px) {
  .searches {
   padding-right: 0;
  }
 }

 /* タブレット縦置きサイズ（768px）以下の際に適用される設定 */
 @media screen and (max-width:768px) {
  .word {
   width: 130px;
  }
 }

 /* スマートフォンサイズ（425px）以下の際に適用される設定 */
 @media screen and (max-width:425px) {
  .word {
   width: 75px;
  }

  .search_from {
   font-size: 12px;
  }

  select {
   height: 23px;
   margin: 0;
  }
 }
</style>

<!-- ログイン済みユーザーですか？、尚且つ、ログインユーザーの名前が「ゲスト」の場合、表示しない -->
<% if user_signed_in? && current_user.name != "ゲスト" %>
 <div class="search_from">
  <%= form_with url: search_path, method: :get, local: true do |f| %>
   <%= f.text_field :word, class: "word" %>
   <%= f.select :model, options_for_select({ "ユーザー" => "user", "投稿" => "post_image" }) %>
   <%= f.submit "検索" %>
  <% end %>
 </div>
<% end %>