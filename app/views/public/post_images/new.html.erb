<div class="container">
 <div class="row">
  <style>

  </style>

  <div class="col-12">
   <h3>新規投稿</h3>
  </div>

  <div class="mx-auto col-lg-10">
   <%= form_with model: @post_image do |f| %>
    <div class="field">
     <%= f.label :image, "画像" %>
     <%= f.file_field :image, accept: "image/*" %>
    </div>

    <div class="field">
     <%= f.label :title, "タイトル" %>
     <%= f.text_field :title %>
    </div>

    <div class="field">
     <%= f.label :body, "本文" %>
     <%= f.text_area :body %>
    </div>

    <%= f.submit "投稿する" %>
   <% end %>
  </div>

 </div>
</div>