<div class="container">
 <div class="row">
  <style>
   .login {
    margin-bottom: 15%;
   }

   h4 {
    margin-top: 30px;
    padding-left: 8%;
   }

   .text {
    text-align: center;
   }

   .new_user {
    display: inline-block;
    text-align: left;
   }

   label {
    width: 200px;
    margin: 10px 10px 10px 0;
   }

   .field > input {
    width: 350px;
   }

   /* タブレット縦置きサイズ（768px）以下の際に適用される設定 */
   @media screen and (max-width:768px) {
    .text {
     margin: 0 auto;
    }

    .text, .field > input, .login > .field {
     width: 330px;
    }

    .login > .field {
     margin-left: 10%;
    }

    .actions > label {
     width: 0;
     margin: 0;
    }

    .actions {
     text-align: center;
    }

    h4 {
     padding-left: 3%;
    }
   }
  </style>

  <div class="col-lg-12">
   <h4>
    <span>新規会員登録</span>
   </h4>

   <div class="text">
    <%= form_with model: @user, url: user_registration_path, class: "new_user" do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

     <div class="field">
      <%= f.label :name, "名前" %>
      <%= f.text_field :name, autofocus: true, placeholder: "令和ちゃん" %>
     </div>

     <div class="field">
      <%= f.label :username, "ユーザー名" %>
      <%= f.text_field :username, placeholder: "reiwa_chan" %>
     </div>

     <div class="field">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %>
     </div>

     <div class="field">
      <label for="password">
       パスワード<% if @minimum_password_length %>（<%= @minimum_password_length %>文字以上）<% end %>
      </label>
      <%= f.password_field :password, autocomplete: "new-password" %>
     </div>

     <div class="field">
      <label for="password_confirmation">パスワード（確認用）</label>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
     </div>

     <div class="actions", style="margin: 30px 0 50px;">
      <label></label>
      <%= f.submit "新規登録" %>
     </div>
     <% end %>
    </div>

    <!-- ログイン画面のリンク -->
    <div class="login">
     <h4>
      <span>
       すでに登録済みの方
      </span>
     </h4>
     <div class="field", style="margin-left: 10%;">
      <%= link_to "こちら", new_user_session_path, class: "login" %>
      からログインしてください。
     </div>
    </div>

  </div>
 </div>
</div>