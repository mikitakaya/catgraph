<div class="container">
 <style>
  .text_field {
   width: 60%;
   height: 100%;
  }

  h4 {
   margin: 30px 0;
  }

  .edit {
   width: 450px;
   border-top: 3px solid #d9d9d9;
  }

  label {
   width: 140px;
   vertical-align: top;
  }

  label, .image {
   padding-left: 10px;
  }

  .field {
   padding: 10px 0;
   border-bottom: 2px solid #d9d9d9;
  }

  .actions {
   padding: 0 10px;
   margin: 30px 0 100px;
  }

  .btn-danger {
   float: right;
   color: #fff;
   background-color: #dc3545;
   border-color: #dc3545;
  }

  /* タブレット横置きサイズ（1024px）以下の際に適用される設定 */
  @media screen and (max-width: 1024px) {
   .profile_image {
    margin-bottom: 50px;
   }
  }

  /* タブレット縦置きサイズ（768px）以下の際に適用される設定 */
  @media screen and (max-width: 768px) {
   .profile_image, .edit {
    width: 380px;
   }
  }

  /* スマートフォンサイズ（425px）以下の際に適用される設定 */
  @media screen and (max-width:425px) {
   .profile_image, .edit {
    width: 100%;
   }

   label {
    width: 110px;
   }

   .profile_image label, img {
    width: 100%;
   }

   .text_field {
    width: 50%;
   }
  }
 </style>

 <%= form_with model: @user do |f| %>
  <div class="row">
   <div class="col-12">
    <h4>
     <span>プロフィールを編集</span>
    </h4>
   </div>

   <% if @user.errors.any? %>
    <%= @user.errors.count %>件のエラーが発生しました
    <ul>
     <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
   <% end %>
  </div>

  <div class="row">
   <div class="col-lg-5">
    <div class="profile_image">
     <%= f.label :profile_image, "プロフィール写真" %><br />
     <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "image" %>
    </div>
   </div>

   <div class="col-lg-7">
    <div class="edit">
     <div class="field">
      <%= f.label :name, "名前" %>
      <%= f.text_field :name, autofocus: true, placeholder: "名前", class: "text_field" %>
     </div>

     <div class="field">
      <%= f.label :username, "ユーザー名" %>
      <%= f.text_field :username, placeholder: "ユーザー名", class: "text_field" %>
     </div>

     <div class="field">
      <%= f.label :introduction, "自己紹介" %>
      <%= f.text_area :introduction, size: "1x8", placeholder: "自己紹介文を入力してみましょう", class: "text_field" %>
     </div>

     <div class="field" style="border-bottom: 3px solid #d9d9d9;">
      <%= f.label :email, "メールアドレス" %>
      <%= f.text_field :email, placeholder: "sample@example.com", class: "text_field" %>
     </div>

     <div class="actions">
      <%= f.submit "変更内容を保存する", class: "btn" %>
      <%= link_to "退会する", unsubscribe_path(current_user.id), class: "btn btn-danger" %>
     </div>
    </div>
   </div>
  </div>
 <% end %>
</div>