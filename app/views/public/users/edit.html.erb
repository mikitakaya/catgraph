<div class="container">
  <style>
   textarea {
    width: 50%;
   }
  </style>

  <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
   <div class="row">
    <div class="col-12">
     <h4>
      <span>プロフィールを編集</span>
     </h4>
    </div>
   </div>

   <div class="row">
    <div class="col-lg-5">
     <div class="field">
      <%= f.label :profile_image, "プロフィール写真" %><br />
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
     </div>
    </div>

    <div class="col-lg-7">
     <div class="field">
      <%= f.label :name, "名前" %>
      <%= f.text_field :name, autofocus: true, placeholder: "名前", class: "text_field" %>
     </div>

     <div class="field">
      <%= f.label :username, "ユーザー名" %>
      <%= f.text_field :username, placeholder: "ユーザー名", class: "text_field" %>
     </div>

     <div class="field">
      <%= f.label :introduction, "自己紹介" %>
      <%= f.text_area :introduction, size: "1x8", placeholder: "自己紹介文を入力してみましょう", class: "text_field" %>
     </div>

     <div class="field">
      <%= f.label :email, "メールアドレス" %>
      <%= f.text_field :email, placeholder: "sample@example.com", class: "text_field" %>
     </div>

     <%= f.submit "編集内容を保存する", class: "btn btn-success" %>
     <%= link_to "退会する", unsubscribe_path(current_user.id), class: "btn btn-danger" %>
    </div>
   </div>
  <% end %>

</div>