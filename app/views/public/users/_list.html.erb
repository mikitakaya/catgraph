<style>
 .post_all {
  display: flex;
  flex-wrap: wrap;
  width: 618px;
  margin: 0 auto 30px;
 }

 .post {
  text-align: left;
  margin: 3px;
 }

 .post_image {
  object-fit: cover; /* 中央でトリミング */
  width: 200px;
  height: 200px;
 }

 .no_image {
  text-align: center;
 }

 .camera {
  border-radius: 50%; /* プロフィール画像の形を丸にする */
  width: 200px;
  height: 200px;
  margin-bottom: 150px;
 }

 .no_image > h3 {
  margin-bottom: 70px;
 }

 .pagination {
  justify-content: center;
 }

 /* タブレット縦置きサイズ（768px）以下の際に適用される設定 */
 @media screen and (max-width:768px) {
  .post_all {
   width: 392px;
  }

  .post_image {
   width: 190px;
   height: 190px;
  }

  .camera {
   margin-bottom: 100px;
  }
 }

 /* スマートフォンサイズ（425px）以下の際に適用される設定 */
 @media screen and (max-width:425px) {
  .post_all {
   width: 250px;
  }

  .post_image {
   width: 119px;
   height: 119px;
  }

  .no_image > h3 {
   font-size: 20px;
   margin-bottom: 40px;
  }
 }
</style>

<div class="col-xl-7 col-lg-12" style="margin-bottom: 30px;">
 <!-- post_imageが無い場合 -->
 <% if post_images.empty? %>
  <div class="no_image">
   <h3>投稿がありません</h3>
   <%= image_tag 'camera.jpg', class: "camera" %>
  </div>
 <!-- post_imageがある場合 -->
 <% else %>
  <div class="post_all">
   <% post_images.each do |post_image| %>
    <div class="post">
     <% if admin_signed_in? %>
      <%= link_to admin_post_image_path(post_image.id) do %>
       <%= image_tag post_image.image, class: "post_image" %>
      <% end %>
     <% else %>
      <%= link_to post_image_path(post_image.id) do %>
       <%= image_tag post_image.image, class: "post_image" %>
      <% end %>
     <% end %>
    </div>
   <% end %>
  </div>
  <%= paginate post_images %>
 <% end %>
</div>