<div class="container">
 <div class="row">
  <style>
   .col-lg-12 {
    margin-bottom: 30px;
   }

   .post_all, .text {
    max-width: 920px;
			 margin: 0 auto 30px;
   }

   .post_all {
    display: flex;
    flex-wrap: wrap;
   }

   .post_image {
    width: 220px;
    height: 220px;
    object-fit: cover; /* 中央でトリミング */
   }

   .pagination {
    justify-content: center;
   }

   .post {
    position: relative;
    width: 220px;
    text-align: left;
    margin: 5px;
   }

   .cancel {
    position: absolute;
    right: 0;
    width: 0;
    height: 0;

    border-style: solid;
    border-color: transparent rgba( 128, 128, 128, 0.7 ) transparent transparent;
    border-width: 0 50px 50px 0;
   }

   .cancel_button {
    font-weight: bold;
    color: white;
    margin: auto;
    width: 50px;
   }

   .cancel > h3 > span {
    position: absolute;
    top: 100%;
    left: 100%;
    transform: translate(150%, -10%);
   }

   .pagination {
    margin-bottom: 30px;
   }

   /* タブレット横置きサイズ（1024px）以下の際に適用される設定 */
   @media screen and (max-width: 1024px) {
    .post_all, .text {
     width: 640px;
    }

    .post_image, .post {
     width: 150px;
     height: 150px;
    }

    .post {
     margin: 5px;
    }
   }

   /* タブレット縦置きサイズ（768px）以下の際に適用される設定 */
   @media screen and (max-width:768px) {
    .post_all, .text {
     width: 380px;
    }

    .post_image, .post {
     width: 180px;
     height: 180px;
    }

    .post {
     margin: 5px;
    }
   }

   /* スマートフォンサイズ（425px）以下の際に適用される設定 */
   @media screen and (max-width: 425px) {
    .post_all, .text {
     width: 248px;
    }

    .post_image, .post {
     width: 120px;
     height: 120px;
    }

    .post {
     margin: 2px;
    }

    .cancel {
     border-width: 0 40px 40px 0;
    }

    .cancel > h3 > span{
     font-size: 20px;
     transform: translate(171%, 0%);
    }
   }
  </style>

  <div class="col-lg-12">
   <div class="text">
    <h4 style="margin-top: 30px;">
     <span>お気に入り一覧</span>
    </h4>
   </div>

   <div class="post_all">
    <% if @favorited_post_images.empty? %>
     <h6 style="margin: 50px 0 100px 20px;">
      お気に入り登録された画像はありません
     </h6>
    <% else %>
     <% @favorited_post_images.each do |post_image| %>
     <div class="post">
      <%= link_to post_image_favorites_path(post_image), class: "cancel_button", method: :delete, "data-confirm" => "お気に入り登録を削除しますか？" do %>
       <div class="cancel">
        <h3>
         <span>
          ×
         </span>
        </h3>
       </div>
      <% end %>

      <%= link_to post_image_path(post_image.id) do %>
       <%= image_tag post_image.image, class: "post_image" %>
      <% end %>
     </div>
     <% end %>
    <% end %>
   </div>
   <%= paginate @favorited_post_images %>
  </div>

 </div>
</div>