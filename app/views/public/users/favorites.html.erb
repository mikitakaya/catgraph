<div class="container">
 <div class="row">
  <style>
   .favorites {
    max-width: 930px;
    display: flex;
    flex-wrap: wrap;
			 margin: 0 auto;
   }

   .post_image {
    width: 230px;
    height: 230px;
    object-fit: cover; /* 中央でトリミング */
   }

   .pagination {
    justify-content: center;
   }

   .img {
    position: relative;
    width: 230px;
   }

   .cancel {
    position: absolute;
    right: 0;
    width: 0;
    height: 0;

    border-style: solid;
    border-color: transparent rgba( 128, 128, 128, 0.7 ) transparent transparent;
    border-width: 0 50px 50px 0;
   }

   .cancel_button {
    font-weight: bold;
    color: white;
    margin: auto;
    width: 50px;
   }

   .cancel > h3 > span {
    position: absolute;
    top: 100%;
    left: 100%;
    transform: translate(150%, -10%);
   }

  </style>

  <div class="col-lg-12">
   <h4>
    <span>お気に入り一覧</span>
   </h4>

   <div class="favorites">
    <% @favorited_post_images.each do |post_image| %>
    <div class="img">
     <%= link_to post_image_favorites_path(post_image), class: "cancel_button", method: :delete do %>
      <div class="cancel">
       <h3>
        <span>
         ×
        </span>
       </h3>
      </div>
     <% end %>

     <%= link_to post_image_path(post_image.id) do %>
      <%= image_tag post_image.image, class: "post_image" %>
     <% end %>
    </div>
    <% end %>

   </div>
   <%= paginate @favorited_post_images %>
  </div>

 </div>
</div>