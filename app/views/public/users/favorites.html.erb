<div class="container">
 <div class="row">
  <style>
   .post_image {
    width: 230px;
    height: 230px;
    object-fit: cover; /* 中央でトリミング */
    display: inline-block;
   }

   .pagination {
    justify-content: center;
   }
  </style>

  <div class="col-lg-12">
   <h3>
    <span>お気に入り一覧</span>
   </h3>

   <div class="favorites" style="text-align: center;">
    <% @favorite_post_images.each do |post_image| %>
     <%= link_to post_image_path(post_image.id) do %>
      <%= image_tag post_image.image, class: "post_image" %>
     <% end %>
    <% end %>

    <%= paginate @favorite_post_images %>
   </div>
  </div>

 </div>
</div>