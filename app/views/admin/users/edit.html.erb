<div class="container">
 <div class="row">
  <style>
   .text_field {
    width: 60%;
   }

   h4 {
    margin: 30px 0;
   }

   .edit {
    width: 500px;
    margin-left: 10%;
    border-top: 3px solid #d9d9d9;
   }

   label {
    width: 140px;
    vertical-align: top;
    padding-left: 10px;
   }

   .field {
    padding: 10px 0;
    border-bottom: 2px solid #d9d9d9;
   }

   text {
    margin-right: 30px;
   }

   .action {
    margin: 30px 0 100px;
   }

   /* タブレット縦置きサイズ（768px）以下の際に適用される設定 */
   @media screen and (max-width:768px) {
    .edit {
     width: 380px;
     margin-left: 5%;
    }
   }
  </style>

  <div class="col-lg-12">
   <h4>
    <span>
     <%= @user.name %>さんのユーザー情報編集
    </span>
   </h4>
  </div>

  <div class="co-lg-12">
   <div class="edit">
    <%= form_with model: @user, url: admin_user_path(@user.id), method: :patch do |f| %>
     <div class="field">
      <%= f.label :id, "会員ID" %>
      <%= @user.id %>
     </div>

     <div class="field">
      <%= f.label :name, "名前" %>
      <%= f.text_field :name, autofocus: true, placeholder: "名前", class: "text_field" %>
     </div>

     <div class="field">
      <%= f.label :username, "ユーザー名"%>
      <%= f.text_field :username, placeholder: "ユーザー名", class: "text_field" %>
     </div>

     <div class="field">
      <%= f.label :introduction, "自己紹介" %>
      <%= f.text_area :introduction, size: "1x8", placeholder: "自己紹介文を入力してみましょう", class: "text_field" %>
     </div>

     <div class="field">
      <%= f.label :email, "メールアドレス" %>
      <%= f.text_field :email, placeholder: "sample@example.com", class: "text_field" %>
     </div>

     <!-- ゲストユーザーのステータス変更ボタンを非表示にする -->
     <% if @user.name != "ゲスト" %>
     <div class="field" style="border-bottom: 3px solid #d9d9d9;">
      <%= f.label :is_deleted, "ステータス" %>
      <%= f.radio_button :is_deleted, "active" %> <text>有効</text>
      <%= f.radio_button :is_deleted, "no_active" %> <text>退会</text>
     </div>
     <% end %>

     <div class="action">
      <label></label>
      <%= f.submit "変更内容を保存する", class: "btn" %>
     </div>
    <% end %>
   </div>

  </div>
 </div>
</div>