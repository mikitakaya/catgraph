<div class="container">
 <div class="row">
  <style>
   .profile_image {
    border-radius: 50%; /* プロフィール画像の形を丸にする */
    object-fit: cover; /* 中央でトリミング */
    width: 70px;
    height: 70px;
   }

   .pagination {
    justify-content: center;
   }

   h3 > span {
    padding-left: 10%;
   }

   td, th {
    padding: 10px;
   }

  </style>

  <div class="col-lg-12">
   <h3 style="margin: 30px 0;">
    <span>ユーザー一覧</span>
   </h3>

   <table align="center" style="width: 800px;">
    <thead>
     <tr>
      <th>ユーザーID</th>
      <th>名前</th>
      <th></th>
      <th>メールアドレス</th>
      <th>ステータス</th>
     </tr>
    </thead>

    <% @users.each do |user| %>
    <tbody>
     <tr>
      <td>
       <%= user.id %>
      </td>

      <td style="padding-right: 0px; width: 70px;">
       <%= link_to admin_user_path(user) do %>
        <%= image_tag user.get_profile_image(70,70), class: "profile_image" %>
       <% end %>
      </td>

      <td>
       <%= link_to admin_user_path(user) do %>
        <%= user.name %><br />
        <%= user.username %>
       <% end %>
      </td>

      <td>
       <%= user.email %>
      </td>

      <!-- ユーザーのステータスはactive（有効）ですか -->
      <% if user.is_deleted == "active" %>
       <td style="color: #28a745; font-weight: bold;">
        <%= user.is_deleted_i18n %>
       </td>
      <% else %>
       <td style="font-weight: bold;">
        <%= user.is_deleted_i18n %>
       </td>
      <% end %>
     </tr>
    </tbody>
    <% end %>
   </table>
   <%= paginate @users %>
  </div>



 </div>
</div>