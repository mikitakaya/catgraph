<div class="container">
 <div class="row">
  <style>
   h4 {
    margin-top: 30px;
    padding-left: 8%;
   }

   main > .container {
    height: 500px;
   }

   .text {
    text-align: center;
   }

   .new_admin {
    display: inline-block;
    text-align: left;
   }

   label {
    width: 200px;
    margin: 10px 10px 10px 0;
   }

   .field > input {
    width: 350px;
   }

   /* タブレット縦置きサイズ（768px）以下の際に適用される設定 */
   @media screen and (max-width:768px) {
    h4 {
     padding-left: 3%;
    }

    .text {
     margin: 0 auto;
    }

    .text, .field > input {
     width: 330px;
    }

    .login > .field {
     margin-left: 10%;
    }

    .actions > label {
     width: 0;
     margin: 0;
    }

    .actions {
     text-align: center;
    }
   }

   /* スマートフォンサイズ（425px）以下の際に適用される設定 */
   @media screen and (max-width: 425px) {
    .text, .field > input {
     width: 100%;
    }

    h4  {
     padding-left: 0;
    }
   }
  </style>

  <div class="col-lg-12">
   <h4>
    <span>
     管理者ログイン
    </span>
   </h4>

   <div class="text">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
     <div class="field">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
     </div>

     <div class="field">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, autocomplete: "current-password" %>
     </div>

     <div class="actions", style="margin-top: 30px;">
      <label></label>
      <%= f.submit "ログイン", class: "btn" %>
     </div>
    <% end %>
   </div>
  </div>
 </div>
</div>