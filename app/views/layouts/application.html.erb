<!DOCTYPE html>
<html>
  <head>
   <title>Catgraph</title>
   <meta name="viewport" content="width=device-width,initial-scale=1">
   <%= csrf_meta_tags %>
   <%= csp_meta_tag %>

   <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
   <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

   <!-- FontAwesomeの読み込み -->
   <script src="https://kit.fontawesome.com/6eb889a2d4.js" crossorigin="anonymous"></script>
  </head>

  <style>
   .field_with_errors {
    display: contents;
   }

   body {
    color: #696969;
    font-family: 'ヒラギノ丸ゴ ProN','Hiragino Maru Gothic ProN', sans-serif;
   }

   .color, footer {
    background-color: #f6edf0;
   }

   footer {
    text-align: center;
    font-family: 'Bradley Hand', sans-serif;
   }

   .footer_text {
    padding: 10px 0;
    color: #666;
   }

   .header_logo {
    width: 80px;
    height: 80px;
   }

   .footer_logo {
    width: 150px;
    height: 150px;
   }

   .menu {
    display:flex;
    flex-direction: column;
    align-items: flex-end;
    padding-top: 10px;
    max-width: 100%;
   }

   .searches {
     padding: 10px 10px 10px 0;
    }

   .search_from > input, select {
    margin: 0 10px;
   }

   li {
    padding: 0 5px;
   }

   .pagination {
    justify-content: center;
   }

   .pagination > span {
    margin: 5px;
   }

   .btn {
    border: 2px solid #666666;
    background-color: #999999;
    color: white;
   }

   /* スマートフォンサイズ（425px）以下の際に適用される設定 */
   @media screen and (max-width:425px) {
    .header_logo {
     width: 50px;
     height: 50px;
    }

    .footer_logo {
     width: 100px;
     height: 100px;
    }

    li, footer {
     font-size: 12px;
    }

    h4 {
     font-size: 18px;
    }

    main .container, .btn {
     font-size: 13px;
    }
   }
  </style>

  <body>
   <header class="color">
    <nav class="navbar navbar-expand-lg navbar-light">
     <div class="container">
      <%= link_to '/' do %>
       <%= image_tag "logo.png", class: "header_logo" %>
      <% end %>

      <div class="menu">
      <!-- ナビゲーションバー -->
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
       <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNavDropdown">
       <ul class="navbar-nav ml-auto">

       <!-- 条件1：admin（管理者）はログインしていますか？ -->
       <% if admin_signed_in? %>

        <!-- trueの場合、ここから管理者用のヘッダー -->
        <li>
         <%= link_to "ユーザー一覧", admin_users_path, class: "nav-link" %>
        </li>

        <li>
         <%= link_to "投稿一覧", admin_top_path, class: "nav-link" %>
        </li>

        <li>
         <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link" %>
        </li>
        <!-- ここまで管理者用のヘッダー -->

       <!-- 条件1がfalse, 条件2:user（ユーザー）はログインしていますか？ -->
       <% elsif user_signed_in? %>

        <!-- trueの場合、ここからユーザー用のヘッダー -->
        <li>
         <%= link_to user_path(current_user.id), class: "nav-link" do %>
          <i class="fa-solid fa-house-user"></i>
          マイページ
         <% end %>
        </li>

        <!-- ログインユーザーの名前が「ゲスト」の場合、表示しない -->
        <% if current_user.name != "ゲスト" %>
         <li>
          <%= link_to new_post_image_path, class: "nav-link" do %>
           <i class="fa-solid fa-camera-retro"></i>
           新規投稿
          <%end %>
         </li>
        <% end %>

        <li>
         <%= link_to post_images_path, class: "nav-link" do %>
          <i class="fa-regular fa-images"></i>
          投稿一覧
         <% end %>
        </li>

        <!-- ログイン中ユーザーの名前が「ゲスト」の場合、表示しない -->
        <% if current_user.name != "ゲスト" %>
         <li>
          <%= link_to favorites_users_path, class: "nav-link" do %>
           <i class="fa-solid fa-heart"></i>
           お気に入り
          <% end %>
         </li>
        <% end %>

        <li>
         <%= link_to destroy_user_session_path, method: :delete, class: "nav-link" do %>
          <i class="fas fa-sign-out-alt"></i>
          ログアウト
         <% end %>
        </li>
        <!-- ここまでユーザー用のヘッダー -->

       <!-- ここから管理者もユーザーもログアウト状態用のヘッダー -->
       <% else %>
        <li>
         <%= link_to about_path, class: "nav-link" do %>
          <i class="fa-solid fa-paw"></i>
          About
         <% end %>
        </li>

        <li>
         <%= link_to new_user_registration_path, class: "nav-link" do %>
          <i class="fas fa-user-plus"></i>
          新規登録
         <% end %>
        </li>

        <li>
         <%= link_to new_user_session_path, class: "nav-link" do %>
          <i class="fas fa-sign-in-alt"></i>
          ログイン
         <% end %>
        </li>

        <li>
         <%= link_to users_guest_sign_in_path, method: :post, class: "nav-link" do %>
          <i class="fa-solid fa-shield-cat"></i>
          ゲストログイン
         <% end %>
        </li>
       <% end %>

      </ul>
     </div>

     <div class="searches" align="right">
      <%= render "searches/form" %>
     </div>
     </div>
    </div>
   </nav>
  </header>

  <main>
   <p id="notice" style="margin: 20px 0 0 5%;">
    <%= flash[:notice] %>
    <%= flash[:alert] %>
   </p>

   <%= yield %>
  </main>

  <footer>
   <%= link_to '/' do %>
    <%= image_tag "logo.png", class: "footer_logo" %>
   <% end %>
   <div class="footer_text">
    copyright © Catgraph All rights reserved.
   </div>
  </footer>

  </body>
</html>